<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th>
	    <%= link_to follow_path(user) do %>
	    <%= user.following.count %>
	    <% end %>
	  </th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th>
	    <%= link_to follower_path(user) do %>
	    <%= user.followers.count %>
	    <% end %>
	  </th>
  </tr>
</table>
　
<div class='row'>
  <% if user.id != current_user.id %>
    <% if user.relation_by?(current_user) %>
      <td>
        <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-outline-secondary btn-info text-white" %>
      </td>
    <% else %>
      <td>
        <%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-outline-secondary btn-success text-white" %>
      </td>
    <% end %>
  <% else %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>